<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent">
    <RelativeLayout
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                    android:id="@+id/RelativeLayout">
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/linearLayout4" android:layout_alignParentBottom="true"
                      android:layout_alignParentLeft="true">
            <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="7"
                    android:id="@+id/buttonSeven" android:layout_weight="1" android:textSize="20sp"/>
            <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="8"
                    android:id="@+id/buttonEight" android:layout_weight="1" android:textSize="20sp"/>
            <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="9"
                    android:id="@+id/buttonNine" android:layout_weight="1" android:textSize="20sp"/>
            <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="0"
                    android:id="@+id/buttonZero" android:layout_weight="1" android:textSize="20sp"/>
            <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="="
                    android:id="@+id/buttonEquals" android:layout_weight="1" android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/linearLayout3" android:layout_above="@+id/linearLayout4"
                      android:layout_alignParentLeft="true">
            <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="4"
                    android:id="@+id/buttonFour" android:layout_weight="1" android:textSize="20sp"/>
            <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="5"
                    android:id="@+id/buttonFive" android:layout_weight="1" android:textSize="20sp"/>
            <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="6"
                    android:id="@+id/buttonSix" android:layout_weight="1" android:textSize="20sp"/>
            <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="-"
                    android:id="@+id/buttonMinus" android:layout_weight="1" android:textSize="20sp"/>
            <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="*"
                    android:id="@+id/buttonMultiply" android:layout_weight="1" android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout2" android:layout_above="@+id/linearLayout3"
                android:layout_alignParentLeft="true">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="1"
                    android:id="@+id/buttonOne" android:layout_weight="1" android:textSize="20sp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="2"
                    android:id="@+id/buttonTwo" android:layout_weight="1" android:textSize="20sp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="3"
                    android:id="@+id/buttonThree" android:layout_weight="1" android:textSize="20sp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="+"
                    android:id="@+id/buttonPlus" android:layout_weight="1" android:textSize="20sp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="/"
                    android:id="@+id/buttonDivide" android:layout_weight="1" android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout" android:layout_above="@+id/linearLayout2"
                android:layout_alignParentLeft="true">
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="("
                    android:id="@+id/buttonLeftbracket" android:layout_weight="1" android:textSize="20sp"/>
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text=")"
                    android:id="@+id/buttonRightbracket" android:layout_weight="1" android:textSize="20sp"/>
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="clear"
                    android:id="@+id/buttonClear" android:layout_weight="1" android:textSize="20sp"/>
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="&lt;-"
                    android:id="@+id/buttonBackspace" android:layout_weight="1" android:textSize="20sp"/>
        </LinearLayout>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                android:layout_alignParentStart="true" android:textSize="25sp" android:gravity="bottom|right"
                android:layout_above="@+id/linearLayout"/>
    </RelativeLayout>
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"/>
</FrameLayout>